<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.icecondor.nest"
      android:versionCode="20120102"
      android:versionName="20120102">
    <uses-sdk android:minSdkVersion="4" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> 
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Start" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="icecondor"/>
                </intent-filter>
        </activity>
        <activity android:name=".Radar" android:label="Radar">
        </activity>
        <activity android:name=".Settings" android:label="Settings">
        </activity>
        <activity android:name=".rss.GeoRssList" android:label="GeoRssList">
        </activity>
        <activity android:name=".rss.GeoRssDetail" android:label="GeoRssDetail">
        </activity>
        <activity android:name=".ActivityLog" android:label="ActivityLog">
        </activity>
        <service android:name=".Pigeon">
        </service>
        <uses-library android:name="com.google.android.maps" />
		<receiver android:name=".Widget" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		        <action android:name="com.icecondor.nest.WIDGET_ON" />
		        <action android:name="com.icecondor.nest.WIDGET_OFF" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/widget" />
		</receiver>
     </application>
    
</manifest>
