<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/radar" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<!--  top status bar -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/topstatus" android:layout_width="fill_parent"
		android:layout_height="wrap_content">

		<!--  gps block -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="0.9">
			<ImageView android:id="@+id/topsat" android:src="@drawable/satellite"
				android:layout_width="60px" android:layout_height="wrap_content" />
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView android:id="@+id/satl1a" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="GPS age" />
				<TextView android:id="@+id/satl1b" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="---" />

			</LinearLayout>
		</LinearLayout>

		<!-- bird block -->
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="0.1">
			<ImageView android:id="@+id/topbird" android:src="@drawable/condor"
				android:layout_width="30px" android:layout_height="wrap_content" />
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="vertical" android:layout_marginLeft="5px">
				<TextView android:id="@+id/topbird2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Pushed" />
				<TextView android:id="@+id/topbird3" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="---" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>


	<!-- Fences -->
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/botfence" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true">
		<TextView android:id="@+id/fencelabel" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Fences:" />
		<TextView android:id="@+id/fencelabel" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="PDX"
			android:layout_marginLeft="3px" android:background="#004400" />
		<TextView android:id="@+id/fencelabel" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Home"
			android:layout_marginLeft="3px" />

	</LinearLayout>

	<!--  google map -->
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/radar" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/topstatus"
		android:layout_above="@id/botfence">
		<com.google.android.maps.MapView
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:enabled="true" android:clickable="true"
			android:apiKey="0KVP3r7JZvW_7kshUNfxpeMXT-gdjPZRFfbYAbA" android:id="@+id/radar_mapview" />
		<!--"0KVP3r7JZvW_x54-XBAVL9cBtUhRgVyvaCcQAPA" production map key-->
	</RelativeLayout>


</RelativeLayout>
